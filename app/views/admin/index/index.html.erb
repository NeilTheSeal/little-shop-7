<%= render partial: "admin/admin_navbar" %>

<div class="page-content">
  
  <div class="content-column">
    <div class="content-header">Incomplete Invoices</div>
    <ol class="content-ordered-list">
      <% @unshipped_invoices.each do |invoice| %>
        <li class="ordered-list-item">
          <%= link_to "Invoice ##{invoice.id}", "/admin/invoices/#{invoice.id}" %>
          <div class="date"> 
            <%= invoice.created_at.strftime("%A, %B %d, %Y") %>
          </div>
        </li>
      <% end %>
    </ol>
  </div>

  <div class="content-column">
    <div class="content-header">Top Customers</div>
    <ol class="content-ordered-list">
      <% @top_customers.each do |customer| %>
        <li class="ordered-list-item">
          <%= customer.first_name %> <%= customer.last_name %> â€“ <%= customer.transaction_count %> purchases
        </li>
      <% end %>
    </ol>
  </div>

</div>
